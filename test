python -m mypy pseudocode
python -m unittest

echo -n "Build package (y/N)? "
read build
if [[ "${build}" == "y" ]]; then
    poetry build
else
    exit 0
fi

# Configure credentials to avoid
# poetry's authentication prompt
# See https://python-poetry.org/docs/repositories/#configuring-credentials
echo -n "Publish package (y/N)? "
read publish
if [[ "${publish}" == "y" ]]; then
    poetry publish
else
    exit 0
fi
